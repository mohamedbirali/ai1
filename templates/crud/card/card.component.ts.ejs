import { Ai1EmailHelper } from '@ai1/util-common/helpers/email.helper';
import { TitleCasePipe } from '@angular/common';
import {
    ChangeDetectionStrategy,
    Component,
    input,
    ViewEncapsulation,
} from '@angular/core';
import { MatTooltip } from '@angular/material/tooltip';
import { RouterLink } from '@angular/router';
import { FuseCardComponent } from '@fuse/components/card';

@Component({
    selector: 'ai1-<%= entityKebab %>-card',
    standalone: true,
    templateUrl: './card.component.html',
    encapsulation: ViewEncapsulation.None,
    changeDetection: ChangeDetectionStrategy.OnPush,
    styles: ``,
    imports: [
        // ng
        RouterLink,
        TitleCasePipe,
        // mat
        MatTooltip,
        // fuse
        FuseCardComponent,
        // ai1
    ],
})
export class <%= entityPascal %>CardComponent {
    // Env - readonly
    // Template
    // @inputs
    id = input.required();
    name = input.required();
    description = input.required({
        transform: (desc) => this.descriptionPlain(`${desc}`),
    });
    // @outputs
    // Form
    // Collections - readonly
    // Privates - #
    // Helpers
    #ai1EmailHelper = new Ai1EmailHelper();
    // Obs$
    // DI
    // =========
    // Contructor
    // Hooks - unsubscribe all on the ngOnDestroy
    // =========
    // Public methods used in the template.
    descriptionPlain(html: string) {
        return this.#ai1EmailHelper.toPlainText(html);
    }
    // Public http/firebase intercation.
    // =========
    // Private methods - #
}
