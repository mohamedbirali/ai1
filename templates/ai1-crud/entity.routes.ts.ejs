import { AI1_TITLE_SUFFIX } from 'app/app.routes';
import { EntityEditComponent } from './edit/edit.component';
import { EntityComponent } from './entity.component';
import { EntityListComponent } from './list/list.component';

const entity = 'Entity';

export default [
    {
        path: '',
        redirectTo: 'list',
        pathMatch: 'full',
    },
    {
        path: '',
        component: EntityComponent,
        children: [
            {
                path: 'list',
                component: EntityListComponent,
                title: `${entity}: List` + AI1_TITLE_SUFFIX,
                data: {
                    breadcrumb: {
                        label: 'List',
                        info: 'heroicons_outline:queue-list',
                    },
                },
            },
            {
                path: 'add',
                component: EntityEditComponent,
                title: `${entity}: Add` + AI1_TITLE_SUFFIX,
                data: {
                    breadcrumb: {
                        label: 'Add',
                        info: 'heroicons_outline:plus',
                    },
                },
            },
            {
                path: 'edit/:id',
                component: EntityEditComponent,
                title: `${entity}: Edit` + AI1_TITLE_SUFFIX,
                data: {
                    breadcrumb: {
                        label: 'Edit',
                        info: 'heroicons_outline:pencil-square',
                    },
                },
            },
        ],
    },
];
